{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "paths": {
      "$logger": [
        "./src/lib/logger.ts"
      ],
      "$utils/*": [
        "./src/lib/utils/*"
      ],
      "$src/*": [
        "./src/*"
      ],
      "$root/*": [
        "./*"
      ],
    },
    "sourceMap": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  },
  "include": [
    "src",
    "test",
  ],
  "exclude": [
    "node_modules"
  ]
}